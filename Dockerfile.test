FROM golang:1.25-bookworm

RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc libc6-dev iproute2 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .

CMD ["go", "test", "-v", "-count=1", "-timeout", "120s", "-run", "TestLinux", "./internal/isolation/"]
